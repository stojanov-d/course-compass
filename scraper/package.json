{
  "name": "scraper",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "build": "tsc && npm run copy-config",
    "copy-config": "node -p \"require('fs').copyFileSync('config.json', 'dist/config.json') || 'Config copied'\"",
    "run": "node dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "clean": "node -p \"require('fs').rmSync('dist', {recursive: true, force: true}) || 'Cleaned dist directory'\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/node": "^24.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/cheerio": "^0.22.35",
    "axios": "^1.9.0",
    "cheerio": "^1.1.0"
  }
}
