{
  "name": "cc-backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/functions/**/*.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rimraf dist",
    "prestart": "npm run clean && npm run build",
    "start": "func start --verbose",
    "dev:init": "npm run build && node dist/src/scripts/initTables.js",
    "dev:seed": "npm run build && node dist/src/scripts/seedDev.js",
    "dev:setup": "npm run dev:init && npm run dev:seed",
    "dev:reset": "npm run build && node dist/src/scripts/cleanup.js reset && npm run dev:seed",
    "cleanup": "npm run build && node dist/src/scripts/cleanup.js",
    "azurite:start": "azurite --silent --location ./azurite-data --debug ./azurite-data/debug.log",
    "dev": "concurrently \"npm run azurite:start\" \"npm run watch\" \"func start --verbose\"",
    "dev:win": "concurrently \"npm run azurite:start\" \"npm run watch\" \"func start --verbose\"",
    "lint": "eslint src --ext .ts,.js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "@azure/data-tables": "^13.3.0",
    "@azure/functions": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/jest": "^29.5.14",
    "@types/node": "18.x",
    "azure-functions-core-tools": "^4.x",
    "concurrently": "^9.1.2",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.3.4",
    "typescript": "^4.0.0",
    "typescript-eslint": "^8.33.1"
  }
}
